
IF(NOT NATIVE_SHARED_HEADER) 
MESSAGE("CREATE HEADER IN ${MULTIWINDOW_SOURCE_DIR}/lib/multiwindow.h")
FILE(READ ${MULTIWINDOW_SOURCE_DIR}/include/shared.h.cmake INIT)
FILE(WRITE ${CMAKE_INCLUDE_OUTPUT_DIRECTORY}/shared/shared.h "${INIT}")
FILE(APPEND ${CMAKE_INCLUDE_OUTPUT_DIRECTORY}/shared/shared.h "${AUTHORS}")
FILE(APPEND ${CMAKE_INCLUDE_OUTPUT_DIRECTORY}/shared/shared.h "/* * * * * * * * * * * * * * * * * * * * * * *")
