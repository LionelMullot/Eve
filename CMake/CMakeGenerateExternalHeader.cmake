#------------------------------------------------
# Set MULTIWINDOW header
# 

IF(WIN32)
	IF(GLEW_INCLUDE_PATH)
		SET(HAVE_MULTIWINDOW_GLEW_WINDOWS_H 1 CACHE INTERNAL "Have include glew.h on WIN32")
		ADD_DEFINITIONS(-DGLEW_STATIC)
	ENDIF(GLEW_INCLUDE_PATH)
	IF(OPENCL_FOUND)
		SET(HAVE_MULTIWINDOW_OPENCL_WINDOWS_H 1 CACHE INTERNAL "Have include <CL/cl.h> on WIN32")
	ENDIF(OPENCL_FOUND)
ELSE (WIN32)
	IF(APPLE)
		SET(HAVE_MULTIWINDOW_GLEW_APPLE_H 1 CACHE INTERNAL "Have include glew.h on OSX")
		IF(OPENCL_FOUND)
			SET(HAVE_MULTIWINDOW_OPENCL_APPLE_H 1 CACHE INTERNAL "Have include <CL/cl.h> on APPLE")
		ENDIF(OPENCL_FOUND)
	ELSE(APPLE)
		IF(GLEW_INCLUDE_PATH)
			SET(HAVE_MULTIWINDOW_GLEW_LINUX_H 1 CACHE INTERNAL "Have include glew.h on LINUX")
			ADD_DEFINITIONS(-DGLEW_STATIC)
		ENDIF(GLEW_INCLUDE_PATH)
		IF(OPENCL_FOUND)
			SET(HAVE_MULTIWINDOW_OPENCL_LINUX_H 1 CACHE INTERNAL "Have include <CL/cl.h> on LINUX")
		ENDIF(OPENCL_FOUND)
	ENDIF(APPLE)
ENDIF(WIN32)
